# Convex
NEXT_PUBLIC_CONVEX_URL=

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk Webhook Secret (para validar webhooks en Convex)
# Obtener de: Clerk Dashboard > Webhooks > tu webhook > Signing Secret
# IMPORTANTE: Esta variable debe configurarse en Convex Dashboard > Settings > Environment Variables
CLERK_WEBHOOK_SECRET=

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk JWT Issuer Domain (para Convex Auth)
# Obtener de: Clerk Dashboard > JWT Templates > convex > Issuer URL
CLERK_JWT_ISSUER_DOMAIN=

# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=xxxxxx

# Email service
# Modo desarrollo: Los emails se envían usando onboarding@resend.dev como remitente. 
# En testMode: true (default) solo permite enviar a delivered@resend.dev. Los emails aparecen en el dashboard de Resend.

# Modo producción: Cambiar testMode: false en convex/emails.ts y verificar un dominio propio en Resend.
RESEND_API_KEY=xxxxxx

