{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/__tests__/**",
    "src/lib/utils.ts",
    "src/components/ui/**"
  ],
  "ignoreDependencies": ["tailwindcss", "tw-animate-css"],
  "entry": ["src/app/**/*.{ts,tsx}", "src/features/**/index.ts", "convex/**/*.ts"],
  "project": ["src/**/*.{ts,tsx}", "convex/**/*.ts"],
  "rules": {
    "exports": "warn",
    "types": "warn"
  },
  "paths": {
    "src/components/ui/*": ["src/components/ui/*"]
  }
}
